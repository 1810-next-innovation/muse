<h1>Carts#show</h1>

<%= @cart_items.each do |cart_item| %>
	<%= cart_item.item.item_name %>
	<%= cart_item.quantity %>
	<%= form_for(cart_item, url: update_item_path(cart_item), method: :patch ) do |f| %>
	  <%= f.number_field :quantity %>
	  <%= f.submit %>
	<% end %>
	<%= link_to "削除", delete_item_path(cart_item), method: :delete %><br/><br />
<% end %>

