<h2>edit</h2>

<%= form_for(@user) do |f| %>


<div class="field">
    <label> Name </label><br>
    <%= f.text_field :name %>

  </div>
  <div class="field">
    <label>Japanese Svllabaries </label><br>
    <%= f.text_field :japanese_syllabaries %>

  </div>

   <div class="field">
    <label>Gender </label><br>
    <%= f.radio_button :gender, 1 %> 男
    <%= f.radio_button :gender, 2 %> 女
  </div>

  <div class="field">
    <label>Post Cord </label><br>
    <%= f.text_field :post_code %>
  </div>

  <div class="field">
    <label>Address </label><br>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <label>Phone_Number </label><br>
    <%= f.telephone_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"email" %>
  </div>
  <div class="field">
    <label>Birthday </label><br>
    <%= f.date_select(
          :birthday,
          start_year: 1930,
          end_year:   (Time.now.year - 18),
          default:    Date.new(1989, 1, 1)) %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"password_confirm" %>
  </div>

  <div class="actions">
    <%= f.submit "Update Account", class:"btn btn-success" %>
  </div>



<% end %>