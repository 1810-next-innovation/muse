<div class="container">
  <div class="row">
    <div class="col-md-10 col-md-offset-1 clearfix">

			<h1>Receivers</h1>
			<%= link_to "Edit", edit_user_receivers_path(@user), class: "btn-sm btn-success" %>
			<table class="table table-hover">
			  <thead>
			  	<tr>
			      <th>Receiver Name</th>
			      <th>Post Code</th>
			      <th>Address</th>
			      <th>Phone Number</th>
			    </tr>
			  </thead>
			  <tbody>
					<% @user.receivers.each do |receiver| %>
			  		<tr>
							<td><%= receiver.receiver_name %></td>
							<td><%= receiver.receiver_post_code %></td>
							<td><%= receiver.receiver_address %></td>
							<td><%= receiver.receiver_phone_number %></td>
						</tr>
					<% end %>
			  </tbody>
			</table>

		</div>
	</div>
</div>
