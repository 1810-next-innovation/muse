

<%= form_tag users_path, :method => 'get' do %> 
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<table>
	<thead>
		<tr>
			<th>User name</th>
			<th>Details</th>
			<th>Status</th>
		</tr>
	</thead>
	<tbody>
		<% @users.each do |user| %>
		<tr>
			<td><%= user.name %></td>
			<td><%= user.post_code %> <%= user.address %> <%= user.phone_number %> <%= user.email %></td>
			<td></td>
		</tr>


		<% end %>

	</tbody>
</table>
