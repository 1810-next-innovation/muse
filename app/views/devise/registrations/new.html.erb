<!-- モーダルエリアここから -->
<section id="open-sign-up" class="modalarea">
  <div id="modalbg" class="modalbg"></div>
  <div class="modalwrapper">
    <div class="modalcontents">
<!--モーダルエリアここまで -->

  <div class="container">
    <h2>WELCOME TO MUSE</h2>
    <h2>SIGN UP</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <label> Name </label><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <label>Japanese Svllabaries </label><br>
    <%= f.text_field :japanese_syllabaries %>

  </div>

   <div class="field">
    <label>Gender </label><br>
    <%= f.label :man %>
    <%= f.radio_button :gender, :man %>
    <%= f.label :woman %>
    <%= f.radio_button :gender, :woman %>
  </div>

  <div class="field">
    <label>Post Cord </label><br>
    <%= f.text_field :post_code %>
  </div>

  <div class="field">
    <label>Address </label><br>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <label>Phone_Number </label><br>
    <%= f.telephone_field :phone_number %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"email" %>
  </div>
  <div class="field">
    <label>Birthday </label><br>
    <%= f.date_select(
          :birthday,
          start_year: 1930,
          end_year:   (Time.now.year - 18),
          default:    Date.new(1989, 1, 1)) %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"password_confirm" %>
  </div>

  <div class="actions">
    <%= f.submit "Create Account", class:"btn btn-success" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

   </div>

<!-- モーダルエリアここから -->
    </div>

    <div id="closemodal" class="closemodal">
      ×
    </div>
  </div>
</section>
