<h1>購入画面</h1>

<%= @cart_items.each do |cart_item| %>
	<%= cart_item.item.item_name %>
	<%= cart_item.quantity %>個
	<%= cart_item.item.price * cart_item.quantity %>円<br>
<% end %><br>
合計<%= @grand_total %>円

<%= form_for(@order) do |f| %>
	<%= f.number_field :grand_total, value: @grand_total, type: "hidden" %>
	<%= @receivers.each do |receiver| %>
		<label for="<%= receiver.id %>">
			<%= f.radio_button :receiver_id, receiver.id, id: receiver.id %>
			<%= receiver.receiver_name %>
			<%= receiver.receiver_post_code %>
			<%= receiver.receiver_address %>
			<%= receiver.receiver_phone_number %>
		</label>
	<% end %>
	<%=  %>
	<%= f.label :credit_card %>
	<%= f.radio_button :payment_method, :credit_card %>
	<%= f.label :cash_on_delivery %>
	<%= f.radio_button :payment_method, :cash_on_delivery %>
	<%= f.label :others %>
	<%= f.radio_button :payment_method, :others %>
	<%= f.submit "購入" %>
<% end %>


