<div class="container">
  <div class="row">
    <div class="col-xs-12">
			<h1>newページ</h1>
			<h2>商品投稿</h2>
			<%= form_for(@item) do |f| %>
			<h3>New item</h3>

				<ul>
					<li>
						<label>Single/Album name</label>
						<%= f.text_field :item_name %>
					</li>

					<li>
						<label>Cover Image</label>
						<%= f.attachment_field :item_image %>
					</li>

					<li>
						<label>Artist name</label>
					</li>

					<li>
						<label>Release date</label>
						<%= f.date_select(
          	:release_date,
          	start_year: 1980,
          	end_year:   (Time.now.year),
          	default:    Date.new(Time.now.year, 1, 1)) %>
					</li>

					<li>
						<label>Price</label>
						<%= f.text_field :price %>
					</li>

					<li>
						<label>Stock</label>
						<%= f.text_field :stock %>
					</li>

					<li>
						<label>Item_name</label>
					</li>

					<li>
						<label>Genre</label>
					</li>

					<li>
						<label>Label_name</label>
						<%= f.select :label_id, @labels.map { |t| [t.label_name, t.id] } %>
						<%= link_to 'New Label', new_label_path %>

						<a><div id="modal-label">New Label</div></a>
            <%= render "labels/new_modal" %>

					</li>

					<li>
						<label>Opinion</label>
						<%= f.text_area :opinion %>
					</li>

					<li>
						<label>Music name</label>
					</li>
				</ul>
				<%= f.submit 'Create Item', class: "item_create" %>

			<% end %>
			<%= link_to '商品一覧', items_path %>
    </div>  
  </div>
</div>