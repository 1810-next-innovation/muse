<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h2>商品検索</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Single/Album name</th>
            <th>Opinion</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
        <% @items.each do |item| %>
          <tr>
            <td>
              <%= link_to item.item_name, item_path(item.id) %>
            </td>
            <td>
              <%= item.opinion %>
            </td>
          </tr>
        <% end %>
        <tbody>
      </table>
  	<%= link_to 'Newページ', new_item_path %>
  	<%= paginate @items, class: "pagenate" %>
	</div>
  </div>
</div>