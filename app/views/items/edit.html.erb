<div class="container">
  <div class="row">
    <div class="col-xs-12">
			<h1><%= @item.item_name %></h1>
			<%= form_for(@item) do |f| %>
			<ul>
				<li>
					<label>Single/Album name</label>
					<%= f.text_field :item_name, class: "col-xs-12 book_title" %>
				</li>
				<li>
					<label>Cover Image</label>
					<%= f.attachment_field :item_image %>
				</li>
				<li>
					<label>Price</label>
					<%= f.text_field :price, class: "col-xs-12" %>
				</li>
				<li>
					<label>Stock</label>
					<%= f.text_field :stock, class: "col-xs-12" %>
				</li>
				<li>
					<label>Opinion</label>
					<%= f.text_area :opinion, class: "form-control col-xs-12" %>
				</li>

<!-- cocoon -->

				<li>
					<label>Discs</label>
					<div class="field">
				    <%= f.fields_for :discs do |d| %>
				      <%= render 'disc_fields', f: d %>
				    <% end %>
				  </div>

				  <div class="field">
				  	<%= link_to_add_association 'Disc +', f, :discs,
				  		data: { association_insertion_method: 'before' },
				  		class: "btn btn-md btn-primary"%>
				  </div>
				</li>

<!-- cocoon -->

				<li style="margin-top: 10px;">
					<%= f.submit 'Update Item', class: "col-xs-12 btn btn-primary" %>
				</li>
			</ul>
			<% end %>

			<%= link_to 'Back', item_path(@item.id) %>
		</div>
	</div>
</div>